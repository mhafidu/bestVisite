<script src="https://cdn.tailwindcss.com"></script>

<% if(success_msg && success_msg.length) { %>
<div class="fixed top-100 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-md flex items-center space-x-2 z-50" role="alert">
    <div>
        <%= success_msg %>
    </div>
    <button type="button" class="text-green-700 hover:text-green-900" aria-label="Close" onclick="this.parentElement.remove()">
        &times;
    </button>
</div>
<% } %>

<% if(error_msg && error_msg.length) { %>
<div class="fixed top-100 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-md flex items-center space-x-2 z-50" role="alert">
    <div>
        <%= error_msg %>
    </div>
    <button type="button" class="text-red-700 hover:text-red-900" aria-label="Close" onclick="this.parentElement.remove()">
        &times;
    </button>
</div>
<% } %>
